{
  "name": "suggesto-packages",
  "version": "0.0.0",
  "private": true,
  "description": "Suggesto NPM packages ecosystem - hybrid wrapper approach",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicsoftware/suggesto-widget.git"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present && ./scripts/post-build.sh",
    "dev": "npm run dev --workspaces --if-present",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:packages": "node test-packages.js",
    "lint": "eslint packages/**/*.ts",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish",
    "clean": "rm -rf packages/*/dist packages/*/node_modules examples/*/node_modules node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "typescript": "^5.5.3",
    "vitest": "^1.6.0",
    "@changesets/cli": "^2.27.7",
    "tsup": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "jsdom": "^24.1.0",
    "@testing-library/jest-dom": "^6.4.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "feedback",
    "widget",
    "suggesto",
    "react",
    "vue",
    "nuxt",
    "typescript"
  ],
  "author": "Niccol√≤ Banti",
  "license": "MIT"
}
